<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Virat Kohli - The King</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #1a1a2e, #16213e);
      color: #fff;
      overflow-x: hidden;
    }
    
    /* New Hero Animation - 3D Flip */
    .hero-section {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: url('https://wallpapercave.com/wp/wp9414530.jpg') no-repeat center center;
      background-size: cover;
      position: relative;
      overflow: hidden;
      perspective: 1000px;
    }
    
    .hero-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
    }
    
    .hero-content {
      text-align: center;
      z-index: 1;
      padding: 0 20px;
      max-width: 800px;
      animation: flipInY 1.5s ease-out;
      transform-style: preserve-3d;
    }
    
    @keyframes flipInY {
      from {
        transform: rotateY(90deg);
        opacity: 0;
      }
      to {
        transform: rotateY(0);
        opacity: 1;
      }
    }
    
    /* New Title Animation - Wave Effect */
    .hero-title {
      font-size: 4.5rem;
      font-weight: 700;
      margin-bottom: 20px;
      color: #ff4d4d;
      text-shadow: 0 0 20px rgba(255, 77, 77, 0.7);
      display: inline-block;
    }
    
    .hero-title span {
      display: inline-block;
      animation: wave 2s infinite;
      animation-delay: calc(.1s * var(--i));
    }
    
    @keyframes wave {
      0%, 40%, 100% {
        transform: translateY(0);
      }
      20% {
        transform: translateY(-20px);
      }
    }
    
    /* New Subtitle Animation - Typewriter */
    .hero-subtitle {
      font-size: 1.8rem;
      margin-bottom: 30px;
      overflow: hidden;
      white-space: nowrap;
      border-right: 3px solid #ff4d4d;
      animation: typing 3.5s steps(40, end), blink-caret 0.75s step-end infinite;
    }
    
    @keyframes typing {
      from { width: 0 }
      to { width: 100% }
    }
    
    @keyframes blink-caret {
      from, to { border-color: transparent }
      50% { border-color: #ff4d4d }
    }
    
    /* New Scroll Down Animation - Pulse */
    .scroll-down {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      color: #fff;
      font-size: 1.5rem;
      animation: pulse 2s infinite;
      cursor: pointer;
    }
    
    @keyframes pulse {
      0% { transform: translateX(-50%) scale(1); }
      50% { transform: translateX(-50%) scale(1.2); }
      100% { transform: translateX(-50%) scale(1); }
    }
    
    /* New Section Entrance - Slide and Bounce */
    .section-title {
      text-align: center;
      font-size: 3rem;
      margin-bottom: 60px;
      color: #ff4d4d;
      position: relative;
      display: inline-block;
      left: 50%;
      transform: translateX(-50%);
      animation: slideBounce 1s ease-out;
    }
    
    @keyframes slideBounce {
      0% {
        transform: translateX(-200%);
      }
      70% {
        transform: translateX(10%);
      }
      100% {
        transform: translateX(-50%);
      }
    }
    
    /* New Bio Image Animation - Swinging */
    .bio-image {
      flex: 1;
      min-width: 300px;
      max-width: 500px;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      animation: swing 8s ease-in-out infinite;
      transform-origin: top center;
    }
    
    @keyframes swing {
      0%, 100% { transform: rotate(-3deg); }
      50% { transform: rotate(3deg); }
    }
    
    /* New Paragraph Animation - Fade and Slide */
    .bio-text p {
      margin-bottom: 20px;
      line-height: 1.8;
      font-size: 1.1rem;
      opacity: 0;
      animation: fadeSlideIn 1s ease-out forwards;
      transform: translateX(-50px);
    }
    
    @keyframes fadeSlideIn {
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    
    /* New Stat Cards Animation - Rotate In */
    .stat-card {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      padding: 30px;
      text-align: center;
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 77, 77, 0.3);
      transition: all 0.3s ease;
      opacity: 0;
      transform: rotateY(180deg);
      animation: rotateIn 1s ease-out forwards;
    }
    
    @keyframes rotateIn {
      to {
        opacity: 1;
        transform: rotateY(0);
      }
    }
    
    /* New Timeline Animation - Falling Leaves */
    .timeline-item {
      padding: 20px 40px;
      position: relative;
      width: 50%;
      opacity: 0;
      animation: fallIn 1s ease-out forwards;
    }
    
    @keyframes fallIn {
      0% {
        opacity: 0;
        transform: translateY(-100px) rotate(-10deg);
      }
      100% {
        opacity: 1;
        transform: translateY(0) rotate(0);
      }
    }
    
    /* New Gallery Animation - Staggered Zoom */
    .gallery-item {
      border-radius: 10px;
      overflow: hidden;
      position: relative;
      height: 250px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
      opacity: 0;
      transform: scale(0.5);
      animation: zoomIn 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
    }
    
    @keyframes zoomIn {
      to {
        opacity: 1;
        transform: scale(1);
      }
    }
    
    /* New Quote Animation - Floating */
    .quote {
      max-width: 800px;
      margin: 0 auto;
      font-size: 1.8rem;
      font-style: italic;
      line-height: 1.6;
      color: #fff;
      position: relative;
      padding: 40px;
      opacity: 0;
      animation: floatUp 2s ease-out forwards;
    }
    
    @keyframes floatUp {
      0% {
        opacity: 0;
        transform: translateY(50px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Rest of the CSS remains the same as before */
    .bio-section {
      padding: 80px 20px;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .bio-content {
      display: flex;
      flex-wrap: wrap;
      gap: 40px;
      justify-content: center;
      margin-bottom: 60px;
    }
    
    .bio-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
    
    .bio-image:hover img {
      transform: scale(1.05);
    }
    
    .bio-text {
      flex: 1;
      min-width: 300px;
      max-width: 600px;
    }
    
    .stats-section {
      background: rgba(0, 0, 0, 0.3);
      padding: 60px 20px;
      margin: 40px 0;
      border-radius: 15px;
      box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.5);
    }
    
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 30px;
      max-width: 1000px;
      margin: 0 auto;
    }
    
    .stat-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 25px rgba(255, 77, 77, 0.2);
    }
    
    .stat-number {
      font-size: 3rem;
      font-weight: 700;
      color: #ff4d4d;
      margin-bottom: 10px;
    }
    
    .stat-label {
      font-size: 1.2rem;
      color: #ddd;
    }
    
    .achievements-section {
      padding: 60px 20px;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .timeline {
      position: relative;
      max-width: 800px;
      margin: 0 auto;
      padding: 40px 0;
    }
    
    .timeline::before {
      content: '';
      position: absolute;
      width: 3px;
      background: #ff4d4d;
      top: 0;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
    }
    
    .timeline-content {
      padding: 20px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
      position: relative;
      transition: transform 0.3s ease;
    }
    
    .timeline-content:hover {
      transform: scale(1.05);
    }
    
    .timeline-content::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      background: #ff4d4d;
      border-radius: 50%;
      top: 30px;
      z-index: 1;
    }
    
    .timeline-item:nth-child(odd) .timeline-content::after {
      right: -10px;
    }
    
    .timeline-item:nth-child(even) .timeline-content::after {
      left: -10px;
    }
    
    .timeline-year {
      font-weight: 700;
      color: #ff4d4d;
      margin-bottom: 10px;
    }
    
    .gallery-section {
      padding: 60px 20px;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
      margin-top: 40px;
    }
    
    .gallery-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
    
    .gallery-item:hover img {
      transform: scale(1.1);
    }
    
    .gallery-caption {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.7);
      padding: 15px;
      transform: translateY(100%);
      transition: transform 0.3s ease;
    }
    
    .gallery-item:hover .gallery-caption {
      transform: translateY(0);
    }
    
    .quote-section {
      padding: 80px 20px;
      text-align: center;
      background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://cricketaddictor.com/wp-content/uploads/2021/09/Virat-Kohli-5.jpg') no-repeat center center;
      background-size: cover;
      background-attachment: fixed;
      position: relative;
    }
    
    .quote::before, .quote::after {
      content: '"';
      font-size: 4rem;
      color: #ff4d4d;
      opacity: 0.5;
      position: absolute;
    }
    
    .quote::before {
      top: 0;
      left: 0;
    }
    
    .quote::after {
      bottom: 0;
      right: 0;
    }
    
    .quote-author {
      margin-top: 20px;
      font-size: 1.5rem;
      color: #ff4d4d;
      font-weight: 700;
    }
    
    footer {
      text-align: center;
      padding: 30px;
      background: #000;
      color: #aaa;
    }
    
    .social-links {
      margin: 20px 0;
    }
    
    .social-links a {
      color: #ff4d4d;
      font-size: 1.5rem;
      margin: 0 15px;
      transition: transform 0.3s ease, color 0.3s ease;
      display: inline-block;
    }
    
    .social-links a:hover {
      transform: translateY(-5px) scale(1.2);
      color: #fff;
    }
    
    .back-to-top {
      position: fixed;
      bottom: 30px;
      right: 30px;
      width: 50px;
      height: 50px;
      background: #ff4d4d;
      color: #000;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      cursor: pointer;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
      z-index: 999;
    }
    
    .back-to-top.active {
      opacity: 1;
      visibility: visible;
    }
    
    .back-to-top:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(255, 77, 77, 0.4);
    }
    
    @media (max-width: 768px) {
      .hero-title {
        font-size: 3rem;
      }
      
      .hero-subtitle {
        font-size: 1.3rem;
      }
      
      .section-title {
        font-size: 2.2rem;
      }
      
      .timeline::before {
        left: 31px;
      }
      
      .timeline-item {
        width: 100%;
        padding-left: 70px;
        padding-right: 25px;
      }
      
      .timeline-item:nth-child(even) {
        left: 0;
      }
      
      .timeline-content::after {
        left: 51px !important;
      }
      
      .timeline-item:nth-child(odd) .timeline-content::after {
        left: 51px;
      }
    }
  </style>
</head>
<body>
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">
        <span style="--i:1">V</span>
        <span style="--i:2">I</span>
        <span style="--i:3">R</span>
        <span style="--i:4">A</span>
        <span style="--i:5">T</span>
        <span style="--i:6"> </span>
        <span style="--i:7">K</span>
        <span style="--i:8">O</span>
        <span style="--i:9">H</span>
        <span style="--i:10">L</span>
        <span style="--i:11">I</span>
      </h1>
      <p class="hero-subtitle">Run Machine • King Kohli • Modern Cricket Legend</p>
    </div>
    <div class="scroll-down" onclick="scrollToBio()">
      <i class="fas fa-chevron-down"></i>
    </div>
  </section>
  
  <section class="bio-section" id="bio">
    <h2 class="section-title">THE KOHLI SAGA</h2>
    <div class="bio-content">
      <div class="bio-image">
        <img src="https://www.crictracker.com/wp-content/uploads/2023/05/Virat-Kohli-2.jpg" alt="Virat Kohli">
      </div>
      <div class="bio-text">
        <p>Virat Kohli, born on November 5, 1988, in Delhi, is one of the greatest batsmen in modern cricket history. From leading India to numerous victories to rewriting record books, Kohli's journey is a testament to his dedication and passion for the game.</p>
        
        <p>Known for his aggressive batting and fitness revolution, Kohli made his international debut in 2008 and quickly established himself as a key player. His first ODI century came in 2009 against Sri Lanka, and there was no looking back.</p>
        
        <p>Kohli took over Test captaincy in 2014 and became full-time limited-overs captain in 2017. Under his leadership, India became a dominant force across formats, achieving historic Test series wins abroad and reaching the No. 1 ranking in all formats.</p>
        
        <p>Beyond his international success, Kohli has been the face of Royal Challengers Bangalore in the IPL and is regarded as one of the greatest chasers in limited-overs cricket with numerous match-winning innings.</p>
      </div>
    </div>
    
    <div class="stats-section">
      <h2 class="section-title">BY THE NUMBERS</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-number">12,894</div>
          <div class="stat-label">ODI Runs</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">8,676</div>
          <div class="stat-label">Test Runs</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">50</div>
          <div class="stat-label">ODI Centuries</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">74</div>
          <div class="stat-label">International Centuries</div>
        </div>
      </div>
    </div>
  </section>
  
  <section class="achievements-section">
    <h2 class="section-title">TIMELINE OF GREATNESS</h2>
    <div class="timeline">
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-year">2008</div>
          <p>Made international debut against Sri Lanka in August. Led India to U19 World Cup victory earlier that year.</p>
        </div>
      </div>
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-year">2009</div>
          <p>Scored his first ODI century against Sri Lanka in Kolkata, showing early signs of his chasing prowess.</p>
        </div>
      </div>
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-year">2011</div>
          <p>Played crucial role in India's World Cup victory, including a match-winning 35* in the final.</p>
        </div>
      </div>
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-year">2014</div>
          <p>Took over Test captaincy from MS Dhoni. Scored four Test centuries in Australia later that season.</p>
        </div>
      </div>
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-year">2016</div>
          <p>Had a record-breaking year with 973 runs in IPL and four T20I centuries in the calendar year.</p>
        </div>
      </div>
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-year">2020</div>
          <p>Stepped down as RCB captain after leading the team for 9 seasons, remaining their highest run-scorer.</p>
        </div>
      </div>
    </div>
  </section>
  
  <section class="gallery-section">
    <h2 class="section-title">ICONIC MOMENTS</h2>
    <div class="gallery-grid">
      <div class="gallery-item">
        <img src="https://images.indianexpress.com/2021/03/Virat-Kohli-1200.jpg" alt="Kohli Celebration">
        <div class="gallery-caption">Signature Celebration</div>
      </div>
      <div class="gallery-item">
        <img src="https://www.crictracker.com/wp-content/uploads/2018/07/Virat-Kohli-2.jpg" alt="Kohli Batting">
        <div class="gallery-caption">Classic Cover Drive</div>
      </div>
      <div class="gallery-item">
        <img src="https://images.news18.com/ibnlive/uploads/2021/09/virat-kohli-1200x800.jpg" alt="Kohli Captaincy">
        <div class="gallery-caption">Leading Team India</div>
      </div>
      <div class="gallery-item">
        <img src="https://www.crictracker.com/wp-content/uploads/2018/07/Virat-Kohli-2.jpg" alt="Kohli Fitness">
        <div class="gallery-caption">Fitness Revolution</div>
      </div>
      <div class="gallery-item">
        <img src="https://images.indianexpress.com/2021/03/Virat-Kohli-1200.jpg" alt="Kohli RCB">
        <div class="gallery-caption">With Royal Challengers</div>
      </div>
      <div class="gallery-item">
        <img src="https://images.news18.com/ibnlive/uploads/2021/09/virat-kohli-1200x800.jpg" alt="Kohli Records">
        <div class="gallery-caption">Breaking Records</div>
      </div>
    </div>
  </section>
  
  <section class="quote-section">
    <div class="quote">
      "I like to be myself, and I don't pretend. For me, it's about how I prepare, what I practice, and how I go about my business. I don't do it to please anyone or to gain attention; I do it because I love doing it."
      <div class="quote-author">- Virat Kohli</div>
    </div>
  </section>
  
  <footer>
    <h3>VIRAT KOHLI</h3>
    <p>The man who redefined batting excellence</p>
    <div class="social-links">
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-youtube"></i></a>
    </div>
    <p>&copy; 2023 Virat Kohli Tribute. All rights reserved.</p>
  </footer>
  
  <div class="back-to-top" id="backToTop">
    <i class="fas fa-arrow-up"></i>
  </div>
  
  <script>
    // Scroll to bio section
    function scrollToBio() {
      document.getElementById('bio').scrollIntoView({ behavior: 'smooth' });
    }
    
    // Back to top button
    const backToTopBtn = document.getElementById('backToTop');
    
    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 300) {
        backToTopBtn.classList.add('active');
      } else {
        backToTopBtn.classList.remove('active');
      }
    });
    
    backToTopBtn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
    
    // Animate elements on scroll with staggered delays
    const animateOnScroll = () => {
      const elements = document.querySelectorAll('.bio-text p, .stat-card, .timeline-item, .gallery-item');
      
      elements.forEach((element, index) => {
        const elementPosition = element.getBoundingClientRect().top;
        const screenPosition = window.innerHeight / 1.3;
        
        if(elementPosition < screenPosition) {
          setTimeout(() => {
            element.style.animationPlayState = 'running';
          }, index * 100);
        }
      });
    };
    
    window.addEventListener('scroll', animateOnScroll);
    window.addEventListener('load', animateOnScroll);
    
    // Add wave animation to section titles
    const sectionTitles = document.querySelectorAll('.section-title');
    sectionTitles.forEach(title => {
      title.innerHTML = title.textContent.split('').map((letter, i) => 
        `<span style="--i:${i}">${letter}</span>`
      ).join('');
    });
  </script>
</body>
</html>